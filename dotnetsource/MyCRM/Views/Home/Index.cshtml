@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to MyCRM</h1>
    <p class="lead">Customer Relationship Management with AI-Powered Email Generation</p>
</div>

<div class="row mt-5">
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fas fa-users fa-3x text-primary mb-3"></i>
                <h4 class="card-title">Customer Management</h4>
                <p class="card-text">Manage your customers with comprehensive contact information, company details, and activity tracking.</p>
                <a href="/customers" class="btn btn-primary">Manage Customers</a>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fas fa-envelope fa-3x text-success mb-3"></i>
                <h4 class="card-title">AI Email Generation</h4>
                <p class="card-text">Generate personalized emails using AI technology with compliance validation for professional outreach.</p>
                <a href="/email/generate" class="btn btn-success">Generate Emails</a>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fas fa-chart-bar fa-3x text-info mb-3"></i>
                <h4 class="card-title">Analytics & Reports</h4>
                <p class="card-text">Track email performance, customer engagement, and system usage with comprehensive reporting.</p>
                <a href="/dashboard" class="btn btn-info">View Dashboard</a>
            </div>
        </div>
    </div>
</div>

<div class="row mt-5">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-star me-2"></i>Key Features</h5>
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    <li><i class="fas fa-check text-success me-2"></i>Customer contact management</li>
                    <li><i class="fas fa-check text-success me-2"></i>AI-powered email generation</li>
                    <li><i class="fas fa-check text-success me-2"></i>Bulk email campaigns</li>
                    <li><i class="fas fa-check text-success me-2"></i>HIPAA compliance validation</li>
                    <li><i class="fas fa-check text-success me-2"></i>Responsible AI principles</li>
                    <li><i class="fas fa-check text-success me-2"></i>Comprehensive audit logging</li>
                    <li><i class="fas fa-check text-success me-2"></i>Role-based access control</li>
                </ul>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-info-circle me-2"></i>Getting Started</h5>
            </div>
            <div class="card-body">
                <ol>
                    <li>Add your customers to the system</li>
                    <li>Configure your email templates</li>
                    <li>Generate AI-powered personalized emails</li>
                    <li>Review compliance validation</li>
                    <li>Send emails and track performance</li>
                </ol>
                <p class="text-muted">
                    <small>
                        <i class="fas fa-lightbulb me-1"></i>
                        Tip: Start with the Dashboard to get an overview of your system status.
                    </small>
                </p>
            </div>
        </div>
    </div>
</div>
