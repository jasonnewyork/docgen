@model IEnumerable<CRMDbOAI.Models.user>
@{
    ViewData["Title"] = "Users";
}
<h2>Users</h2>
<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Name</th>
            <th>Role</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.username</td>
            <td>@item.email</td>
            <td>@item.first_name @item.last_name</td>
            <td>@item.role_id</td>
            <td>@(item.is_active == true ? "Active" : "Inactive")</td>
            <td>
                <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.user_id">Details</a>
                <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.user_id">Edit</a>
                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.user_id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
