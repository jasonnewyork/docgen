@model IEnumerable<CRMDbOAI.Models.role>
@{
    ViewData["Title"] = "Roles";
}
<h2>Roles</h2>
<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.role_name</td>
            <td>@item.description</td>
            <td>
                <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.role_id">Details</a>
                <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.role_id">Edit</a>
                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.role_id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
