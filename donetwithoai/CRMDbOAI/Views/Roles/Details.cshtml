@model CRMDbOAI.Models.role
@{
    ViewData["Title"] = "Role Details";
}
<h2>Role Details</h2>
<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.role_name</h5>
        <p><strong>Description:</strong> @Model.description</p>
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.role_id">Edit</a>
        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.role_id">Delete</a>
    </div>
</div>
